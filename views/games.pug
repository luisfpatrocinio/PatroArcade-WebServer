extends base.pug

block headExtra 
    title Listagem de Jogos 

block content 
    section
        h2 Jogos
            ul
                each game in gameDatabase
                    li.gameListItem
                        a(href=`/game/${game.id}`).game-link= game.title
    div.returnButton
        a(id="home-button" href="#") Voltar

block scripts
    script(src="/scripts/gamesPage.js")